// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Dog {
  id                String          @id @default(auto()) @map("_id") @db.ObjectId
  photo             String?
  name              String
  age               String
  weight            String
  description       String
  owner_name        String
  is_adoptable      String?
  galery            Json?
  daily_status      Json?
  medical_status    Json?
  comments          Json?
}
