// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Dog {
  id                String          @id @default(auto()) @map("_id") @db.ObjectId
  photo             String?
  name              String
  gender            String?
  fur               String?
  temperament       String?
  age               String
  weight            String
  description       String
  owner_name        String
  is_castrated      String?
  is_adoptable      String?
  observations      String?
}

model Daily {
  id                String          @id @default(auto()) @map("_id") @db.ObjectId
  dog_id            String          
  date              DateTime
  status            String?
  description       String
}

model Medical {
  id                String          @id @default(auto()) @map("_id") @db.ObjectId
  dog_id            String?
  attendance_type   String?
  complaint         String?
  appearance        String?
  hydration_status  String?
  mucous            String?
  lymphs            String?
  suspicion         String?
  weight            String?
  temperature       String?
  anotation         String?
  diagnosis         String?
  forwarding        String?
  doctor            String?
  date              String?
  time              String?
  budget            String?
}

model Comment {
  id                String          @id @default(auto()) @map("_id") @db.ObjectId
  author_name       String?
  author_class      String?
  author_year       String?
  dog_id            String  
  text              String
  date              String
}

model Gallery {
  id                String          @id @default(auto()) @map("_id") @db.ObjectId
  dog_id            String
  img               String[]
  date              String
}