generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Dog {
  id                String          @id @default(auto()) @map("_id") @db.ObjectId
  photo             String?
  name              String
  age               String
  weight            String
  description       String
  owner_name        String
  daily_status      Json?
  medical_status    Json?
  comments          Json?
}

